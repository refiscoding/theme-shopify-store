<div class="promo-title-banner">
  <h1 class="uk-text-center"><b>{{ section.settings.heading }}</b></h1>
</div>
<div class="half-circle"></div>

<div class="page-width">
  <div class="uk-margin-left uk-margin-right">
    <div class="uk-padding-large-top">
        {%- assign collection = collections[section.settings.collection-1] -%}
        <div class="uk-padding-bottom">
          <h2 class="uk-text-center"><b>{{ collection.title }}</b></h2>
          {{ collection.description }}
        </div>

        <ul class="uk-flex@m uk-flex-between uk-flex-middle uk-background-default">
          {% for product in collection.products limit: 3 %}
            <li class="grid__item grid__item--{{section.id}} uk-width-1-3-1-2@m">
              {%- assign max_height = 345 -%}
              {% include 'product-card-grid', max_height: max_height, product: product %}
            </li>
          {% endfor %}
        </ul>


        <ul class="uk-flex@m uk-flex-wrap uk-flex-between uk-flex-middle">
          {% for product in collection.products offset: 3 limit: 3%}
            <li class="grid__item grid__item--{{section.id}} uk-width-1-3-1-2@m">
              {%- assign max_height = 345 -%}
              {% include 'product-card-grid', max_height: max_height, product: product %}
            </li>
          {% endfor %}
        </ul>


      <div class="uk-margin-large-top uk-margin-large-bottom uk-padding-large uk-background-cover" data-src="{{ "sdepot-typeform-bg.png" | asset_img_url: "master" }}" uk-img>
        <div class="uk-flex@m uk-width-2-3@m uk-flex-between uk-flex-middle uk-margin-auto">
          <h4><b>Not sure which software you want?</b></h4>
          <a href="https://msofficesoftware.typeform.com/to/XLSyIz" class="large-txt btn third-color uk-text-white uk-display-block"><b>Help me find out</b></a>
        </div>
      </div>

      {%- assign collection = collections[section.settings.collection-2] -%}
      <div class="uk-padding-bottom">
        <h2 class="uk-text-center"><b>{{ collection.title }}</b></h2>
        {{ collection.description }}
      </div>

      <ul class="uk-flex@m uk-flex-wrap uk-flex-between uk-flex-middle">
        {% for product in collection.products %}
          <li class="grid__item grid__item--{{section.id}} uk-width-1-3-1-2@m">
            {%- assign max_height = 345 -%}
            {% include 'product-card-grid', max_height: max_height, product: product %}
          </li>
        {% endfor %}
      </ul>

    </div>
  </div>
</div>

<style>
.promo-title-banner {
  background: #F79432;
  padding-top: 75px;
  color: white;
}
.promo-title-banner > h1{
  font-size: 60px;
}
.half-circle {
  border-bottom: 75px solid #F79432;
  border-radius: 0 0 100% 100%;
}
</style>

{% schema %}
{
  "name": "Promo content",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Promo title"
    },
    {
      "type": "collection",
      "id": "collection-1",
      "label": "Collection"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Promocode image"
    },
    {
      "type": "collection",
      "id": "collection-2",
      "label": "Collection"
    }
  ]
}
{% endschema %}
