<div>
  <h4>{{ section.settings.section-title }}</h4>
  <div class="d-flex space-between cart-upsell">

    <div class="d-flex space-between align-center upsell-item">
      {% assign product = all_products[section.settings.item-1] %}
        <img src="{{ product.featured_image | img_url: "180x180" }}">
      <div>
        <p>{{ product.title }}</p>
        <p>{{ product.price | money_with_currency }}</p>
        <button class="btn-primary" style="background-color: #01303F; width: 128px;">+ ADD</button>
      </div>
    </div>

    <div class="d-flex space-between align-center upsell-item">
      {% assign product = all_products[section.settings.item-2] %}
        <img src="{{ product.featured_image | img_url: "180x180" }}">
      <div>
        <p>{{ product.title }}</p>
        <p>{{ product.price | money_with_currency }}</p>
        <button class="btn-primary" style="background-color: #01303F; width: 128px;">+ ADD</button>
      </div>
    </div>

    <div class="d-flex space-between align-center upsell-item">
      {% assign product = all_products[section.settings.item-3] %}
        <img src="{{ product.featured_image | img_url: "180x180" }}">
      <div>
        <p>{{ product.title }}</p>
        <p>{{ product.price | money_with_currency }}</p>
        <button class="btn-primary" style="background-color: #01303F; width: 128px;">+ ADD</button>
      </div>
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Upsell products",
  "settings": [
    {
      "type": "text",
      "id": "section-title",
      "label": "Title",
      "default": "Customers also bought"
    },
    {
      "type": "product",
      "id": "item-1",
      "label": "Product"
    },
    {
      "type": "product",
      "id": "item-2",
      "label": "Product"
    },
    {
      "type": "product",
      "id": "item-3",
      "label": "Product"
    }
  ]
}
{% endschema %}
