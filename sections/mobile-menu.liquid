<section class="mobile-menu mobile-only">
  <div class="menu-container">
    <ul id="menuItem">
      {% for link in linklists[section.settings.main_linklist].links %}
        {% if link.links != blank %}
          <li id="menuItemli">
            <div class="d-flex space-between align-center">
              <h5>{{ link.title | escape }}</h5>
              <span>{% include 'icon-down-arrow' %}</span>
            </div>
          </li>

          <ul class="menuUl">
            {% for childlink in link.links %}
              {% if childlink.links != blank %}
                <li>
                  <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
                  <ul>
                    {% for grandchildlink in childlink.links %}
                      <li>
                        <a href="{{ grandchildlink.url }}">{{ grandchildlink.title | escape }}</a>
                      </li>
                    {% endfor %}
                  </ul>
                </li>
              {% else %}
                <li>
                  <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>

          {% endif %}
          {% endfor %}
          <li id="menuItemli">
            <a href="/collections/office-apps" style="text-decoration: none;">
              <div class="d-flex space-between align-center">
                <h5>Office Apps</h5>
              </div>
            </a>
          </li>
    </ul>
  </div>
</section>

{% schema %}
  {
    "name": "Mobile Menu",
    "settings": [
      {
        "type": "link_list",
        "id": "main_linklist",
        "label": "Menu",
        "default": "main-menu"
      }
    ]
  }
{% endschema %}
