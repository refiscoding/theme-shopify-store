<div class="container">

  {% if page.handle == 'privacy-policy' %}

  <div class="page-banner desktop-only" style="background-image: url('https://cdn.shopify.com/s/files/1/0086/7932/5753/files/privacy-bg.jpg?2366')">
    <div class="page-title">
      <h3>{{ page.title }}</h3>
