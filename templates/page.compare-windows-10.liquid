            event.currentTarget.parentNode.classList.toggle('expanded');
        });
    }

    window.addEventListener('scroll', function() {
        if (window.scrollY > 600) {
            document.querySelector('.stickPrice').classList.add('show-fixed');
        }
        if (window.scrollY < 600) {
            document.querySelector('.stickPrice').classList.remove('show-fixed');
        }
    });
</script>
